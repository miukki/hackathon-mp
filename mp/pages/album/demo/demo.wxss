/* pages/album/view.wxss */
page {
  background: black;
  position: relative;
}

background-title {
  background: linear-gradient(#f77062, #fe5196); 
  position: absolute;
  width: 100%;
  top: 0px;
  opacity: 0.7; 
  display: block;
} 

title-wrapper {
  width: 100%;
  display: block;
  color: white;
  padding: 30px;
  font-family: "serif";
  text-transform: uppercase;
  line-height: 34px;
  position: absolute;
  top: 0px;
}

background-title,
title-wrapper,
album item image:first-child {
  height: 66vh;
}

title-wrapper title {
  font-size: 34px;
  font-weight: bold;
  display: block;
  width: 300px;
}

title-wrapper background {
  display: block;
  height: 100%;
  position: absolute;
  top: 100px;
  //background: linear-gradient(#f77062, #fe5196); 
}





buttons {
  color: white;
  position: relative;
  top: 0px;
}

album {

}

item {
  position: relative;
  display: block;
}

item.video {
  height: 220px;
}



album item video,
album item image,
album item {
  margin: 0px;
  padding: 0px;
  width: 100%;
  overflow: hidden;
  position: relative;
  display: block;
}

