/**app.wxss**/

html,body,section {
  height: 100%;
  background-color: rgb(240, 207, 255);
}

/* -------------------------- */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.footer-nav-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  /*height: 60px;*/
  padding: 10px;
  background-color: white;
  border-top: 1px solid #666;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 100;
}

/* -------------------------- */

.gram-list {
  background-color: #eee;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
  width: 100%;
  padding: 3px;
}

.gram-item {
  position: relative;
  border: 1px inset #FFF;
  border-radius: 5px;
  padding: 10px;
  margin: 3px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  left: 5px;
  width: 90%;
}

.gram-item-ex {
  background-color: #eFF;
}

.gram-cname {
  font-size: 10px;
  color: #aaa;
  padding: 5px;
}

.gram-title {
  padding: 10px;
}

.gram-title-en {
  font-size: 2rem;
  margin-bottom: 10px;
}

.gram-title-zh {
  font-size: 3rem;
  color: rgb(92, 11, 0);
  margin-bottom: 10px;
}

.gram-title-pin {
  font-size: 1rem;
  color: #999;
}

.gram-slug {
  position: absolute;
  top: -4px;
  font-size: 9px;
  padding: 5px;
  color: #888;
  min-width: 20px;
  border-radius: 5px;
  /*background-color: #eee;*/
  /*display: inline;*/
  /*border-bottom: 1px solid #bbb;*/
}

.gram-meaning {
  background-color: white;
  padding: 10px;
  width: 80%;
}

