.example-block {
  border-top: 1px solid black;
  background-color: #eee;
  width: 100%;
  padding: 5px;
  display: flex;
  flex-direction: column;
}

.ex-en {
  font-size: 18px;
  padding: 5px;
  line-height: 20px;
}

.ex-zh {
  font-size: 22px;
  color: rgb(92, 11, 0);
  padding: 5px;
  line-height: 26px;
