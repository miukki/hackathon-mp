/**index.wxss**/

.index-container {
  background-color: rgb(209, 255, 195);
}

.splash-screen {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.splash-green {
  background: rgb(24, 200, 20);
  width: 100%;
  border-radius: 5px;
  padding-top: 20px;
  padding-bottom: 20px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.splash-logo {
  font-size: 48px;
}

.splash-item {
  width: 100%;
}

.stacked {
  display: flex;
  flex-direction: column;
}

.splash-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  /*border: 1px solid #333;*/
}

.nav-button {
  font-size: 1.2rem;
  padding: 10px;
  margin-top: 5px;
  background-color: #eef;
  border: 1px solid #ccc;
  border-radius: 3px;
}

.stats {
  margin-top: 20px;
  font-size: 9px;
}

.splash-button {
  width: 100%;
}

.splash-stats {
  padding: 20px;
  font-size: 14px;
  display: flex;
  flex-direction: column;
}

.qrcode {
  height: 150px;
}

.loading-wheel {
  width: 56px;
}
